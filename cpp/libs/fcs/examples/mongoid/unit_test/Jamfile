import os ;
project fcs_examples_mongoid_unit_tests
    :
    :
    ;

ENV_CXXFLAGS = [ os.environ CXXFLAGS ] ;
ENV_LINKFLAGS = [ os.environ LINKFLAGS ] ;

ADDITIONAL_SRC =

# custom <additional src>

/site-config//mongoclient
/site-config//boost_system
/site-config//boost_regex

# end <additional src>
;

ADDITIONAL_REQUIREMENTS =

# custom <additional requirements>
# end <additional requirements>
;

import testing ;

rule test_fcs_examples_mongoid
{
   for local fileb in [ glob *.cpp ]
   {
      all_rules += [ run $(fileb) 
         $(ADDITIONAL_SRC)
         /site-config//boost_program_options
         $(PANTHEIOS_LIBS)
      :  # additional args
      :  # test-files
      :  # requirements
         <cxxflags>$(ENV_CXXFLAGS)
         <linkflags>$(ENV_LINKFLAGS)
         $(ADDITIONAL_REQUIREMENTS)
         <toolset>msvc:<asynch-exceptions>on         
         <debug-symbols>on
      ] ;
   }
}

test-suite fcs_examples_mongoid_test_suite : [ test_fcs_examples_mongoid ] ;
explicit fcs_examples_mongoid_test_suite ;

# Targets to build unit tests that stay around for debugging
exe person_unit_test :
         test_person.cpp
         $(ADDITIONAL_SRC)
         /site-config//boost_program_options
         $(PANTHEIOS_LIBS)
      :  # additional args
         <cxxflags>$(ENV_CXXFLAGS)
         <linkflags>$(ENV_LINKFLAGS)
         $(ADDITIONAL_REQUIREMENTS)
         <define>RUN_NON_BOOST_UNIT_TEST
         # <linkflags>-Xlinker --Map=person_unit_test.map
         # <define>DEBUG_FCS_STARTUP
      :  # test-files
      :  # requirements
;
explicit person_unit_test ;



alias fcs_examples_mongoid_unit_tests :
   person_unit_test
  ;

explicit fcs_examples_mongoid_unit_tests ;


